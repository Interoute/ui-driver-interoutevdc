<section class="horizontal-form">
    <form>
        <div class="container-fluid">
            <div class="over-hr r-mt20 r-mb20">
                <span>ACCOUNT ACCESS</span>
            </div>
            <div class="row {{if isStep1 'form-group'}}">
                <div class="col-sm-12 col-md-2 form-label">
                    <label class="form-control-static">API Key</label>
                </div>
                <div class="col-sm-12 col-md-10">
                    {{#if isStep1}} {{input type="text" autofocus="autofocus" value=model.%%DRIVERNAME%%Config.apikey classNames="form-control" placeholder="Your VDC API Key"}} {{else}}
                    <div class="form-control-static">
                        {{model.%%DRIVERNAME%%Config.apikey}}
                    </div>
                    {{/if}}
                </div>
            </div>
            <div class="row {{if isStep1 'form-group'}}">
                <div class="col-sm-12 col-md-2 form-label">
                    <label class="form-control-static">Secret Key</label>
                </div>
                <div class="col-sm-12 col-md-10">
                    {{#if isStep1}} {{input type="text" value=model.%%DRIVERNAME%%Config.secretkey classNames="form-control" placeholder="Your VDC Secret Key"}} {{else}}
                        <div class="form-control-static">
                            **************************************************************************************
                        </div>
                    {{/if}}
                </div>
            </div>
            <div class="row {{if isStep1 'form-group'}}">
                <div class="col-sm-12 col-md-2 form-label">
                    <label class="form-control-static">VDC Region</label>
                </div>
                <div class="col-sm-12 col-md-10">
                    {{#if isStep1}} {{new-select classNames="form-control" content=avregions prompt='Please select a region' optionLabelPath='name' optionValuePath='id' value=model.%%DRIVERNAME%%Config.vdcregion}} {{/if}}
                </div>
            </div>
        </div>
    </form>
    {{#if isStep1}} {{top-errors errors=errors}}
        <div class="footer-actions">
            <button {{action "cloudAuth"}} name="submit" class="btn btn-primary">Authenticate</button> <button {{action "cancel"}} class="btn btn-link">Cancel</button>
        </div>
    {{/if}}
</section>

<!-- Step 2 -->
<section class="horizontal-form r-pt0 step2 {{unless isStep2 'hide'}}">
    <div class="text-center">
        <i class="icon icon-spinner icon-spin"></i><i>&nbsp; Authenticating...</i>
    </div>
</section>

<!-- Step 3 -->
<section class="horizontal-form r-pt0 step3 {{unless isGteStep3 'hide'}}">
    <div class="container-fluid">
        <div class="over-hr r-mt20 r-mb20 test-1 test-1-test">
            <span>AVAILABILITY ZONE</span>
        </div>
        <div class="row {{if isStep3 'form-group'}}">
            <div class="col-sm-12 col-md-2 form-label">
                <label class="form-control-static">Availability Zone</label>
            </div>
               <div class="col-sm-12 col-md-8 test-2">
                   {{new-select classNames="form-control" action=(action resetSiblingMenus) content=avzones prompt='Please select a zone' optionLabelPath='name' optionValuePath='id' value=model.%%DRIVERNAME%%Config.zoneid}}
            </div>
        </div>
    </div>
    
    {{#if isStep3}} {{top-errors errors=errors}}
        <div class="footer-actions">
            <button {{action "selectZone"}} class="btn btn-primary">Continue</button> <button {{action "cancel"}} class="btn btn-link">Cancel</button>
        </div>
    {{/if}}
</section>

