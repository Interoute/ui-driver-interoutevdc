                {{new-select action=(action resetSiblingMenus) classNames="col-sm-12 col-md-6 col-lg-6 form-control" content=avdiskofferings  prompt='Please select a disk offering (extra/DATA disk)' optionLabelPath='name' optionValuePath='id' value=model.%%DRIVERNAME%%Config.diskofferingid }}
                {{input type="text" value=model.%%DRIVERNAME%%Config.disksize classNames="col-sm-12 col-md-6 col-lg-6 form-control" placeholder="Disk size (GB)"}}
            </div>
