                {{new-select action=(action resetSiblingMenus) classNames="form-control" content=avnetworks prompt='Please select a network' optionLabelPath='name' optionValuePath='id' value=model.%%DRIVERNAME%%Config.networkid }}
            </div>
        </div>
    </div>
    {{#if isStep5}} {{top-errors errors=errors}}
        <div class="footer-actions">
