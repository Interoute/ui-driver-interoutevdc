<!-- Step 11 -->
<section class="horizontal-form r-pt0 step11 {{unless isGteStep11 'hide'}}">
    <div class="container-fluid">
        <div class="over-hr r-mt20 r-mb20">
            <span>Service Offering</span>
        </div>
        <div class="row {{if isStep11 'form-group'}}">
            <div class="col-sm-12 col-md-2 form-label">
                <label class="form-control-static">CPU</label>
            </div>
            <div class="col-sml-12 col-md-10">
                <button {{action "lessCPU"}} class="btn btn-primary btn-square cpu minus"> - </button> 
                <input id="cpuoffering" maxlength="2" onchange={{action "setRAMCPUOffering"}}  type="text" class="form-control" value={{model.%%DRIVERNAME%%Config.cpu}} />
                <span class="cpu-label">vCPU</span>
                <button {{action "moreCPU"}} class="btn btn-primary btn-square cpu plus"> + </button>
            </div>
            <div class="clearfix"></div><br />
            <div class="col-sm-12 col-md-2 form-label">
                <label class="form-control-static">VRAM</label>
            </div>
            <div class="col-sml-12 col-md-10"> 
                <button {{action "lessVRAM"}} class="btn btn-primary btn-square vram minus"> - </button>
                <input id="vramoffering" maxlength="4" onchange={{action "setRAMCPUOffering"}} type="text" class="form-control" value={{model.%%DRIVERNAME%%Config.ram}} />
                <span class="vram-label">GB</span>
                <button {{action "moreVRAM"}} class="btn btn-primary btn-square vram plus"> + </button>
                <!-- <label>{{model.%%DRIVERNAME%%Config.ram}} vRAM</label>-->
            </div>
        </div>
    </div>
    {{#if isStep11}} {{top-errors errors=errors}}
        <div class="footer-actions">
            <button {{action "getServiceOfferingId"}} class="btn btn-primary">Continue</button> <button {{action "cancel"}} class="btn btn-link">Cancel</button>
        </div>
    {{/if}}
</section>

